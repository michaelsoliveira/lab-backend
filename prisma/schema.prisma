generator client {
    provider = "prisma-client-js"
    // previewFeatures = ["postgresqlExtensions"]
}

datasource db {
    provider = "sqlite"
    url = env("DATABASE_URL")
    // extensions = [postgis, uuid_ossp(map: "uuid-ossp")]
}

model User {
    id  String @id @default(uuid())
    created_at DateTime @default(now())
    updated_at DateTime @default(now())
    email       String @unique
    username    String?
    password    String
    image       String?
    @@map("users")
}

model UnidadeEscolar {
    id  String @id @default(uuid())
    created_at DateTime @default(now())
    updated_at DateTime @default(now())
    nome String
    logradouro String?
    numero      String?
    bairro      String?
    municipio   String?
    estado      String?
    turmas      Turma[]
    @@map("unidades_escolares")
}

model Turma {
    id  String @id @default(uuid())
    created_at DateTime @default(now())
    updated_at DateTime @default(now())
    unidade_id  String
    unidadeEscolar  UnidadeEscolar @relation(fields: [unidade_id], references: [id])
    @@map("turmas")
}